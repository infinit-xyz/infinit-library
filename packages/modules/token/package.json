{
  "name": "@infinit-xyz/token",
  "version": "0.0.0-alpha.12",
  "homepage": "https://infinit.tech",
  "repository": {
    "type": "git",
    "url": "https://github.com/infinit-xyz/infinit-library.git",
    "directory": "packages/modules/token"
  },
  "bugs": {
    "url": "https://github.com/infinit-xyz/infinit-library/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./actions": {
      "types": "./dist/actions/index.d.ts",
      "default": "./dist/actions/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf cache artifacts node_modules dist",
    "typecheck_temp": "tsc --noEmit",
    "compile": "ENABLE_HARDHAT_TOOLBOX=true bun ../../../node_modules/@infinit-xyz/core/dist/exports/internal/hardhat-compile.js $PWD",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "files": [
    "/dist",
    "/contracts"
  ],
  "eslintConfig": {
    "extends": "../../../.eslintrc.js"
  },
  "dependencies": {
    "@infinit-xyz/core": "^0.0.1-alpha.0",
    "@openzeppelin/contracts": "5.0.0",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@openzeppelin/merkle-tree": "^1.0.7",
    "lodash": "^4.17.21",
    "tsup": "^8.2.4",
    "viem": "2.21.16",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.7",
    "hardhat": "^2.22.5",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  }
}