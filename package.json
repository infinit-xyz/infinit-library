{
  "name": "infinit-library",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules && pnpm run --r --parallel clean",
    "compile": "pnpm run --r --parallel compile",
    "build": "pnpm run --r --sequential build",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "pnpm build && changeset publish",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm prettier . --write --config .prettierrc",
    "lint:check": "pnpm prettier . --check --config .prettierrc",
    "format": "pnpm eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:typecheck": "vitest run --typecheck",
    "test:coverage": "vitest run --coverage",
    "typecheck": "pnpm run --r --parallel typecheck",
    "make-badges": "istanbul-badges-readme"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.7.0",
    "@infinit-xyz/test": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.14.14",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@vitest/coverage-istanbul": "^1.6.0",
    "eslint": "^9.7.0",
    "eslint-plugin-unused-imports": "^4.0.1",
    "globals": "^15.9.0",
    "istanbul-badges-readme": "^1.9.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "prool": "^0.0.4",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": ">= 22"
  }
}